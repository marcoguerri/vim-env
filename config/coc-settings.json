{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"]
        }
    },
    "signature.target": "echo",
    "coc.preferences.formatOnSaveFiletypes": [
        "c",
        "go",
        "python",
        "markdown",
        "javascript",
        "typescript",
        "json",
        "jsonc"
  ]
}
